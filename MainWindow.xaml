<Window x:Class="RustWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RustWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="900"
        MinHeight="650" MinWidth="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.OpacityMask>
            <ImageBrush TileMode="Tile" ImageSource="/Rust_Hazmat_DomeSilhouette.jpg"/>
        </Grid.OpacityMask>
        <Grid.Background>
            <ImageBrush TileMode="None" Stretch="Fill" ImageSource="/Rust_Hazmat_DomeSilhouette.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="276.923"/>
            <ColumnDefinition Width="277*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="mainMenuBTN" Margin="0,1,5,10">
            <Button.Background>
                <ImageBrush ImageSource="/Rust logo.jpg" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="gunsBTN" Content="" Margin="69,0,69,0" Grid.Column="1" Click="gunsBTN_Click_1">
            <Button.Background>
                <ImageBrush ImageSource="/gunsBTN.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="itemsBTN" Content="" Grid.Column="2" Margin="68,1,67,0" Click="itemsBTN_Click_1">
            <Button.Background>
                <ImageBrush ImageSource="/ItemsBTN.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="animalsBTN" Content="" Grid.Column="3" Margin="69,1,69,0" Click="animalsBTN_Click">
            <Button.Background>
                <ImageBrush ImageSource="/animalsBTN.jpg"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
